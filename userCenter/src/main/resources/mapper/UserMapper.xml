<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pajk.user.mapper.UserMapper">

    <resultMap id="userMap" type="com.pajk.user.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="userColumns">
        id, username, password, phone, email, created_at, updated_at
    </sql>

    <!-- 根据ID查询用户 -->
    <select id="getUserById" resultMap="userMap">
        SELECT
        <include refid="userColumns"/>
        FROM user
        WHERE id = #{id}
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="getUserByUsername" resultMap="userMap">
        SELECT
        <include refid="userColumns"/>
        FROM user
        WHERE username = #{username}
    </select>

    <!-- 插入用户 -->
    <insert id="insertUser" parameterType="com.pajk.user.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
            username, password, phone, email
        ) VALUES (
            #{username}, #{password}, #{phone}, #{email}
        )
    </insert>

    <!-- 更新用户 -->
    <update id="updateUser" parameterType="com.pajk.user.entity.User">
        UPDATE user
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email}</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除用户 -->
    <delete id="deleteUser">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <!-- 查询所有用户 -->
    <select id="getAllUsers" resultMap="userMap">
        SELECT
        <include refid="userColumns"/>
        FROM user
    </select>
</mapper> 